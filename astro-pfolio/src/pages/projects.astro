---
import Layout from "../layouts/Layout.astro";
import NavigationBar from "../components/navigationBar/navigationBar.astro";
import ProjectCard from "../components/projects/projectCard";
import Body from "../components/Body.astro";
import Content from "../components/Content.astro";

interface Frontmatter {
  title: string;
  link: string;
  thumbnail?: string;
  description?: string;
}
const projects = await Astro.glob<Frontmatter>("./content/projects/*.md");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Layout title="NoÃ© Rivera - Projects" />
  </head>

  <Body>
    <NavigationBar />

    <Content>

    <main class="flex items-center justify-center">
      <section class="max-w-screen-md w-full sm:mx-0 md: p-10 mt-10">
        <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 gap-14">
          {
            projects.map((project) => (
              <li>
                <a href={project.url}>
                  <ProjectCard
                    title={project.frontmatter.title}
                    url={project.frontmatter.link}
                    thumbnail={project.frontmatter.thumbnail}
                  >
                    {project.frontmatter.description}
                  </ProjectCard>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    </Content>
  </Body>
</html>
